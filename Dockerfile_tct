FROM rust:1.73-alpine as builder

WORKDIR /home/usr/tct/

COPY ./  ./

RUN apk add libressl-dev musl-dev

RUN cargo install --path ./tchatchers_cli_tools/

FROM alpine:latest

WORKDIR /home/usr/tct/

COPY --from=builder /usr/local/cargo/bin/tct /home/usr/tct/tct

RUN adduser -D runner && chown -R runner ./

RUN chmod 111 /home/usr/tct/tct

USER runner

ENTRYPOINT ["./tct"]
